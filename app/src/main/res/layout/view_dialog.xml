<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corner_background"
    android:backgroundTint="@color/light_yellow"
    android:paddingStart="@dimen/dp_size_16"
    android:paddingEnd="@dimen/dp_size_16">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_size_32"
        android:text="Title"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_size_18"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_size_40"
        android:layout_marginTop="@dimen/dp_size_16"
        android:background="@color/white"
        android:padding="@dimen/dp_size_8"
        android:text="Title"
        android:textColor="@color/black"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/sp_size_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@id/edit_title"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/edit_title">

        <Button
            android:id="@+id/button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_size_24"
            android:layout_weight="1"
            android:backgroundTint="@color/orange"
            android:minWidth="@dimen/dp_size_120"
            android:text="Button 1" />

        <Button
            android:id="@+id/button_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_size_24"
            android:layout_weight="1"
            android:backgroundTint="@color/orange"
            android:minWidth="@dimen/dp_size_120"
            android:text="Button 2" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>